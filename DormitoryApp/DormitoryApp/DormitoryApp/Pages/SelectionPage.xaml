<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DormitoryApp.Pages.SelectionPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" >
            <Label Text="Please select" HorizontalOptions="Center" />
            <Button Text="Guest" />
            <Button Text="Resident" Clicked="Resident_Clicked"/>
            <Button Text="Guard" Clicked="Guard_Clicked"/>
            <Button Text="Admin" Clicked="Admin_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>